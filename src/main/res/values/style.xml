<?xml version="1.0" encoding="utf-8"?>
<resources>



    <!--圆角Dialog-->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="lineWatch1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- Dialog自下而上动画 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
    <!-- 背景透明 -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <!-- 浮于Activity之上 -->
    <item name="android:windowIsFloating">true</item>
    <!-- 边框 -->
    <item name="android:windowFrame">@null</item>
    <!-- Dialog以外的区域模糊效果 -->
    <item name="android:backgroundDimEnabled">true</item>
    <!-- 无标题 -->
    <item name="android:windowNoTitle">true</item>
    <!-- 半透明 -->
    <item name="android:windowIsTranslucent">true</item>
    <!-- Dialog进入及退出动画 -->
    <item name="android:windowAnimationStyle">@style/DialogFragmentAnimation</item>
    </style>


    <!-- Dialog淡入淡出缩放动画 -->
    <style name="ActionSheetDialogStyle1" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation1</item>

    </style>


    <style name="ActionSheetDialogAnimation1" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dailog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/dailog_exit_animation</item>
    </style>

    <!-- Dialog自下而上动画 -->
    <style name="DialogFragmentAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!--向下弹出 -->
    <style name="AnimDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_out</item>
    </style>
    <!--由下向上 全屏 -->
    <style name="AnimAll" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--向右弹出 -->
    <style name="AnimHorizontal" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_left_out</item>
    </style>
    <!--向左弹出 -->
    <style name="AnimRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_right_out</item>
    </style>
    <!-- 顶部标题栏 -->
    <style name="top_bar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">@dimen/cm_height_44</item>
    </style>

    <!--标题ImageButton样式-->
    <style name="top_bar_btn_left">
        <item name="android:layout_width">@dimen/cm_height_44</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@null</item>
    </style>
    <!--标题TextView样式-->
    <style name="top_bar_tv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!--标题ImageButton样式-->
    <style name="top_bar_btn_right">
        <item name="android:layout_width">@dimen/cm_height_44</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--标题TextView样式-->
    <style name="top_bar_tv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:textColor">@color/font_ff66</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!--标题TextView样式-->
    <style name="top_bar_tv_right_buycar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:textSize">@dimen/font_size_13</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 中间题目样式-->
    <style name="top_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/cm_height_44</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/font_ff33</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 横线-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">@color/horizontal_line_color</item>
    </style>
    <!-- 横线-->
    <style name="line_horizontal_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cm_height_1</item>
        <item name="android:background">@color/horizontal_line_color</item>
    </style>
    <style name="line_horizontal.title">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>